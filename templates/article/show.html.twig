{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Article</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ article.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Titre</th>
                    <td>{{ article.titre }}</td>
                </tr>
                <tr>
                    <th scope="row">Prix</th>
                    <td>{{ article.prix }}</td>
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td>{{ article.description }}</td>
                </tr>
                <tr>
                    <th scope="row">Image</th>
                    <td>{{ article.image }}</td>
                </tr>
                <tr>
                    <th scope="row">Remise</th>
                    <td>{{ article.remise }}</td>
                </tr>
                <tr>
                    <th scope="row">Stock</th>
                    <td>{{ article.stock }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_article_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>

        <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-primary">Modifier</a>

        {{ include('article/_delete_form.html.twig') }}
    </div>
{% endblock %}
